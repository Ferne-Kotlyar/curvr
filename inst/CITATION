citHeader("To cite curvy in publications use:")

citEntry(entry = "Article",
  title        = "curvy: An R package for calculating curvature from polynomial functions fitted to landmarked specimens.",
  author       = personList(as.person("Mannfred Masahiro Asada Boehm")),
  journal      = "TBD",
  year         = "2020",
  volume       = "1",
  number       = "3",
  pages        = "1--25",
  url          = "http://www.jstatsoft.org/v40/i03/",

  textVersion  =
  paste("Mannfred M.A. Boehm (2020).",
        "curvy: An R package for calculating curvature from polynomial functions fitted to landmarked specimens.",
        "Journal of Statistical Software, 40(3), 1-25.",
        "URL http://www.jstatsoft.org/v40/i03/.")
)
